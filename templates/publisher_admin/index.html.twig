{% extends 'base.html.twig' %}

{% block title %}Wydawcy{% endblock %}

{% block body %}
    <a class="btn btn-success btn-block" href="{{ path('admin_publisher_new') }}">+ Dodaj</a>
    <table class="table table-hover table-dark">
        <thead>
        <tr>
            <th>#</th>
            <th>ID</th>
            <th>Nazwa</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for publisher in publishers %}
            <tr>
                <th>{{ loop.index }}</th>
                <td>{{ publisher.id }}</td>
                <td>{{ publisher.name }}</td>
                <td><a href="{{ path('admin_publisher_edit', {'id': publisher.id}) }}">Edytuj</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
