{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-success btn-block" href="{{ path('admin_category_new') }}">+ Dodaj</a>
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>Nazwa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <th>{{ loop.index }}</th>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td><a href="{{ path('admin_category_edit', {'id': category.id}) }}">Edytuj</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>
{% endblock %}